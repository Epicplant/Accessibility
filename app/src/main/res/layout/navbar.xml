<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.fcom/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/iconBar"
    android:layout_gravity="center"
    android:paddingTop="@dimen/padding"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_info"
    android:screenReaderFocusable="true">

    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/icon"
        android:layout_weight="1"
        android:minWidth="48dp"
        android:minHeight="48dp" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="@dimen/icon"
        android:layout_height="@dimen/icon"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/margin_size"
        android:adjustViewBounds="true"
        android:contentDescription="Settings"
        android:minWidth="@dimen/button_size"
        android:minHeight="@dimen/button_size"
        android:src="@drawable/ic_baseline_settings_48"
        app:tint="@color/settings_buttons" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="@dimen/icon"
        android:layout_height="@dimen/icon"
        android:layout_gravity="end"
        android:adjustViewBounds="true"
        android:contentDescription="Home"
        android:gravity="center"
        android:minWidth="@dimen/button_size"
        android:minHeight="@dimen/button_size"
        android:src="@drawable/home"
        app:tint="@color/settings_buttons" />
</LinearLayout>